<Window x:Class="WPF_EmailChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_EmailChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="writeHere"  HorizontalAlignment="Left" Margin="72,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" Height="29"/>
        <Button Name="clickHere" Content="Click to check Email" HorizontalAlignment="Left" Margin="72,113,0,0" VerticalAlignment="Top" Click="clickHere_Click"/>
        <Label Name="boolValidEmail" Content="" HorizontalAlignment="Left" Margin="217,110,0,0" VerticalAlignment="Top" Width="130"/>
        <Label Content="Write your Email to check it:" HorizontalAlignment="Left" Margin="72,40,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
