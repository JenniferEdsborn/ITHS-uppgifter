<Window x:Class="WPF_Tidsrapportering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tidsrapportering"
        mc:Ignorable="d"
        Title="Tidsbokning" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Arbetare">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="48*"/>
                        <ColumnDefinition Width="349*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="TextBox_Work" HorizontalAlignment="Left" Margin="142,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="241" Height="93" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto" Grid.Column="1" />
                    <DatePicker Name="WorkDate" HorizontalAlignment="Left" Margin="142,207,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                    <ComboBox Name="TimeBox" HorizontalAlignment="Left" Margin="277,208,0,0" VerticalAlignment="Top" Width="106" SelectedIndex="0" Grid.Column="1"/>
                    <Label Content="Arbete" HorizontalAlignment="Left" Margin="139,50,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label Content="Datum" HorizontalAlignment="Left" Margin="142,176,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label Content="Tid" HorizontalAlignment="Left" Margin="277,176,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Button Content="Lägg till arbete" HorizontalAlignment="Left" Margin="215,266,0,0" VerticalAlignment="Top" Height="40" Width="125" Click="AddWork" Grid.Column="1"/>
                    <TextBox Name="BoxWorkerID" HorizontalAlignment="Left" Margin="142,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="241" Grid.Column="1"/>
                    <Label Content="Namn" HorizontalAlignment="Left" Margin="142,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>

                </Grid>
            </TabItem>
            <TabItem Header="Manager">
                <Grid Background="#FFE5E5E5">
                    <ListBox Name="Result_ListBox" Margin="162,30,30,0"/>
                    <Button Content="Ta bort" HorizontalAlignment="Left" Margin="35,55,0,0" VerticalAlignment="Top" Height="31" Width="86" Click="RemoveWork"/>
                    <Label Content="Loggade tider" HorizontalAlignment="Left" Margin="162,4,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
